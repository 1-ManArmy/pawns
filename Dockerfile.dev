# Lightweight dev Dockerfile (optional) for faster iterative work
FROM node:18-alpine
WORKDIR /app

# Install dependencies separately to leverage Docker layer caching
COPY package*.json ./
COPY tsconfig.json ./
COPY vite.config.ts ./
COPY tailwind.config.js ./
RUN npm ci

# Copy rest of source
COPY . .

EXPOSE 5173
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0", "--port", "5173"]